<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="home.alert.MainActivity">

    <Button
        android:id="@+id/btn_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khẩn cấp"
        android:background="#f90000"
        android:height="@dimen/abc_alert_dialog_button_bar_height"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textSize="16dp"
        android:layout_below="@+id/btn_milk"
        android:layout_alignParentStart="true"
        android:tag="alert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nước"
        android:id="@+id/btn_water"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="command"
        android:tag="water" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sữa"
        android:id="@+id/btn_milk"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="command"
        android:tag="milk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trái cây"
        android:id="@+id/btn_fruits"
        android:onClick="command"
        android:tag="fruits"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
